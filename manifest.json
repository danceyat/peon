{

  "manifest_version": 2,
  "name": "Peon",
  "version": "1.0",

  "description": "Adds a page action which helps to download image and PDF from a specific website.",

  "icons": {
    "64": "icons/little_peon.png"
  },

  "applications": {
    "gecko": {
      "id": "danceyat@gmail.com"
    }
  },

  "permissions": [
    "activeTab",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "browser_style": true,
    "default_icon": "icons/little_peon.png",
    "default_popup": "popup/peon.html",
	  "default_title": "小苦工",
    "show_matches": ["*://*.shxinsu.xicp.net/*"]
  }

}
