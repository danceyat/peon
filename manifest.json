{

  "description": "Adds a browser action icon to the toolbar. This extension helps to download image and PDF from a specific website.",
  "manifest_version": 2,
  "name": "Peon",
  "version": "1.0",
  "homepage_url": "https://github.com/danceyat/peon",
  "icons": {
    "48": "icons/download.png"
  },

  "permissions": [
    "activeTab",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/download.png",
    "default_title": "Peon",
    "default_popup": "popup/peon.html"
  }

}
